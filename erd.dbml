// https://dbdiagram.io/d/wable-64888412722eb77494e48e6a
Project project_name {
  database_type: 'MySQL'
  Note: 'Description of the project'
}

Table users {
  id int [primary key]
  gender varchar
  name varchar [not null, unique]
  nickname string [not null, unique]
  birth date
  mbti varchar
  profile_image_url varchar
  created_at timestamp
  updated_at timestamp
}

Table introductions {
  id int [primary key]
  user_id int [ref: > users.id]
  group_id int [ref: > groups.id]
  nickname varchar
  profile_image_url varchar
  descriptions varchar
}

Table introduction_questions {
  id int [primary key]
  introduction_id int [ref: > introductions.id]
  type questionType
  question varchar
  has_selections bool
  answers []varchar
}

Table groups {
  id int [primary key]
  name varchar // 그룹명
  owner_id int [ref: > users.id]
  created_at timestamp
  updated_at timestamp
}

Table user_groups {
  id int [primary key]
  user_id int [ref: > users.id]
  group_id int [ref: > groups.id]
  position varchar
  created_at timestamp
  updated_at timestamp
}

Table cards {
  id int [primary key]
  from_user_id int [ref: > users.id]
  from_user_name varchar
  to_user_id int [ref: > users.id]
  to_user_name varchar
  group_id int [ref: > groups.id]
  type cardType
  content varchar
  is_visible bool
  created_at timestamp
  updated_at timestamp
}

enum cardType {
    "인사"
    "축하"
    "응원"
    "감사"
}

Table group_questions {
  id int [primary key]
  group_id int  [ref: > groups.id]
  question_id int [ref: > questions.id]
  Note: "그룹들이 필수로 받고 싶은 질문 항목"
}

Table questions {
  id int [primary key]
  type questionType
  question varchar
  has_selections bool
  selections []varchar [Note: "선택지 리스트"]
}

enum questionType {
  "성격"
  "취미"
  "커스텀"
}

